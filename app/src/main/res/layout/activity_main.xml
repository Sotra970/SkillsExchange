<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_margin="6dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#f2f2f2"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:context="com.example.joudialfattal.skillsexchange.MainActivity">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:src="@mipmap/seclogo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:text="Skills Exchange Cypurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/appname"
                    android:fontFamily="casual"
                    android:textSize="24sp"
                    android:textColor="#9C27B0"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:text="Loading..."
                android:textColor="#33B5E5"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="8dp"
                android:textColorHint="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    android:hint="Enter Email"
                    android:textColorHint="@color/colorPrimarySme"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    android:hint="Enter Password"
                    android:textColorHint="@color/colorPrimarySme"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.CardView
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/password"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:onClick="onClick"
                    android:text="Log In"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="6dp"
                android:text="Haven't Registered Yet? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registertext"
                android:textColorLink="@color/colorPrimarySme"
                android:layout_below="@+id/login"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:fontFamily="casual"
                android:textColor="@color/colorPrimarySme"
                android:textStyle="bold"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
